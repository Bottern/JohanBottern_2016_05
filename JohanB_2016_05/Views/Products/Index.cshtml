@model IEnumerable<JohanB_2016_05.Models.Products>

@{
    ViewBag.Title = "Index";
}

<h2>List of Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductsInStock)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductsInStock)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductsId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductsId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductsId })
        </td>
    </tr>
}

</table>
